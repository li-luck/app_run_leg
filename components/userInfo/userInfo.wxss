/* pages/userInfo/userInfo.wxss */
page {
  background-color: rgba(246, 247, 251, 1);
  padding: 24rpx 24rpx 120rpx;
  width: auto;
}
.van-nav-bar {
  background-color: transparent!important;
}
.user-info {
  display: flex;
}
.user-info image {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
}
.user-info .user-box {
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}
.user-info .user-box text {
  font-size: 40rpx;
}
.member-info {
  height: 128rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  position: relative;
  border-radius: 12rpx;
  margin: 40rpx auto 0;
  border-radius: 6px;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}
.member-info image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.member-box {
  font-weight: 400;
  z-index: 10;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  line-height: 48rpx;
  justify-content: space-between;
}
.member-box text {
  font-size: 36rpx;
}
.list-box {
  margin-top: 16rpx;
  border-radius: 6px;
  padding-bottom: 36rpx;
  background-color: white;
}
.list-box .title {
  font-size: 32rpx;
  line-height: 48rpx;
  padding-top: 18rpx;
  font-weight: 700;
  padding-left: 24rpx;
  margin-bottom: 36rpx;
}
.item-row {
  width: 33%;
  display: inline-block;
  line-height: 32rpx;
  font-size: 24rpx;
  text-align: center;
  color: rgba(38, 51, 65, 1);
}
.item-row view {
  font-weight: 700;
  line-height: 40rpx;
  height: 48rpx;
  margin-bottom: 16rpx;
  font-size: 40rpx;
  display: block;
}
.number-box .item-row view {
  height: 40rpx;
}
.item-row view image {
  width: 48rpx;
  height: 48rpx;
}
.item-col {
  margin: 0 24rpx;
  height: 96rpx;
  border-bottom: 1rpx solid rgba(240, 241, 242, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-col .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 24rpx;
  background-color: #858D95;
}
.item-col van-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 24rpx;
}
.item-col text {
  font-size: 28rpx;
  flex: 1;
}